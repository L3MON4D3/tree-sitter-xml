{
  "name": "@chronobserver/tree-sitter-xml",
  "version": "0.4.0",
  "license": "MIT",
  "description": "XML & DTD grammars for tree-sitter",
  "repository": "tree-sitter-grammars/tree-sitter-xml",
  "author": {
    "name": "ObserverOfTime",
    "email": "chronobserver@disroot.org",
    "url": "https://observeroftime.github.io/"
  },
  "keywords": [
    "tree-sitter",
    "parser",
    "lexer",
    "xml",
    "dtd"
  ],
  "main": "bindings/node",
  "dependencies": {
    "nan": "^2.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "tree-sitter-cli": "~0.20.8"
  },
  "scripts": {
    "build": "node -e \"require('./scripts').build_all()\"",
    "build:dtd": "node -e \"require('./scripts').build('dtd')\"",
    "build:xml": "node -e \"require('./scripts').build('xml')\"",
    "parse": "tree-sitter parse",
    "test": "node -e \"require('./scripts').test_all()\"",
    "test:dtd": "node -e \"require('./scripts').test('dtd')\"",
    "test:xml": "node -e \"require('./scripts').test('xml')\"",
    "playground:dtd": "node -e \"require('./scripts').playground('dtd')\"",
    "playground:xml": "node -e \"require('./scripts').playground('xml')\""
  },
  "publishConfig": {
    "access": "public"
  },
  "tree-sitter": [
    {
      "scope": "source.xml",
      "file-types": [
        "xml",
        "svg",
        "xsd",
        "xslt"
      ],
      "injection-regex": "^(xml|svg|xsd|xslt)$",
      "highlights": "xml/queries/highlights.scm",
      "path": "xml"
    },
    {
      "scope": "source.dtd",
      "file-types": [
        "dtd"
      ],
      "injection-regex": "^dtd$",
      "highlights": "dtd/queries/highlights.scm",
      "path": "dtd"
    }
  ]
}
