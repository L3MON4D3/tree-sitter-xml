{
  "name": "@chronobserver/tree-sitter-xml",
  "version": "0.4.0",
  "license": "MIT",
  "description": "XML & DTD grammars for tree-sitter",
  "repository": "tree-sitter-grammars/tree-sitter-xml",
  "author": {
    "name": "ObserverOfTime",
    "email": "chronobserver@disroot.org",
    "url": "https://observeroftime.github.io/"
  },
  "keywords": [
    "tree-sitter",
    "parser",
    "lexer",
    "xml",
    "dtd"
  ],
  "main": "bindings/node",
  "dependencies": {
    "nan": "^2.18.0"
  },
  "devDependencies": {
    "tree-sitter-cli": "~0.20.8"
  },
  "scripts": {
    "build": "npm run build-dtd && npm run build-xml",
    "build-dtd": "cd dtd && tree-sitter generate --no-bindings",
    "build-xml": "cd xml && tree-sitter generate --no-bindings",
    "parse": "tree-sitter parse",
    "test-load": "node -e \"console.log(require('./dtd').name, require('./xml').name)\"",
    "test": "npm run test-dtd && npm run test-xml && npm run test-load",
    "test-dtd": "cd dtd && tree-sitter test",
    "test-xml": "cd xml && tree-sitter test",
    "playground-xml": "cd xml && tree-sitter build-wasm && tree-sitter playground",
    "playground-dtd": "cd dtd && tree-sitter build-wasm && tree-sitter playground"
  },
  "publishConfig": {
    "access": "public"
  },
  "tree-sitter": [
    {
      "scope": "source.xml",
      "file-types": [
        "xml",
        "svg",
        "xsd",
        "xslt"
      ],
      "injection-regex": "^(xml|svg|xsd|xslt)$",
      "highlights": "xml/queries/highlights.scm",
      "path": "xml"
    },
    {
      "scope": "source.dtd",
      "file-types": [
        "dtd"
      ],
      "injection-regex": "^dtd$",
      "highlights": "dtd/queries/highlights.scm",
      "path": "dtd"
    }
  ]
}
